<?xml version="1.0" encoding="UTF-8"?>
<project xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xmlns="http://maven.apache.org/POM/4.0.0"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <groupId>c.d.t.gitwagon</groupId>
    <artifactId>gitwagon-test</artifactId>
    <version>0.1</version>

    <pluginRepositories>
        <!--Setup own wagon plugin repository-->
        <pluginRepository>
            <id>synergian-fork-repo</id>
            <url>https://raw.github.com/melangoth/wagon-git/releases</url>
        </pluginRepository>
    </pluginRepositories>

    <distributionManagement>
        <!--Setup own maven repository-->
        <repository>
            <!--https://github.com/melangoth/wagon-git.git-->
            <id>mgh-github-release</id>
            <name>Github release repository of melangoth</name>
            <url>git:releases://git@github.com:melangoth/github-mvn-repo.git</url>
        </repository>
        <!--<snapshotRepository>
            <id>your-snapshot-repo-id</id>
            <name>Your Snapshot Repo Name</name>
            <url>git:snapshots://git@github.com:yourgithubusername/your-github-repo2.git</url>
        </snapshotRepository>-->
        <!--<site>
            <id>your-site-repo-id</id>
            <url>git:site://git@github.com:yourgithubusername/your-github-repo2.git</url>
        </site>-->
    </distributionManagement>

    <repositories>
        <repository>
            <id>mgh-github-release</id>
            <name>Github release repository of melangoth</name>
            <releases>
                <enabled>true</enabled>
            </releases>
            <snapshots>
                <enabled>false</enabled>
            </snapshots>
            <!--
               distributionManagement url was
               <url>git:your-branch://git@github.com:yourgithubusername/your-github-repo.git</url>
            -->
            <url>https://raw.github.com/melangoth/wagon-git.git/releases</url>
        </repository>
    </repositories>

    <build>
        <extensions>
            <!--Get the wagon plugin-->
            <extension>
                <groupId>ar.com.synergian</groupId>
                <artifactId>wagon-git</artifactId>
                <version>0.3.0</version>
            </extension>
        </extensions>
    </build>
</project>